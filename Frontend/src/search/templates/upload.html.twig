
{% include 'head.html.twig' %}
<div class="ui grid container">
<div class="row"></div>
<div class="row">
<h1> New upload </h1>
	
</div>
<div class="ui ten wide column centered">
	

<form class="ui form" method="post" enctype="multipart/form-data" >
 <div class="required field">
<input type="file" name="file[]" required="">
</div>
<div class="required field" id="files">
</div>
<input type="button" class="ui button active" id="addfile" value="Add a file"></input>
<div class="row"></div>
  <div class="required field">
      <label>Creation date</label>
  <input type="text" class="date" name="creation_date" value="{{creation_date}}" required="">
  </div>
   <div class="field">

    <label>Sample kind</label>
    <input type="text" name="sample_kind" placeholder="Sample kind" value="{{sample_kind}}">
  </div>
  <div class="required field">

    <label>Title</label>
    <input type="text" name="title" placeholder="Title" value="{{title}}" required="">
  </div>
<div class="required field">
    <label>Language</label>
 <select class="ui dropdown" name="language">
	  <option value="0">French</option>
	  <option value="1">English</option>
</select>

  </div>  
  <div class="required field">
    <label>Authors</label>
<div class="required field" id="items">
	 <div><input type="text" value="{{firstname}}" name="authors-firstname[]" placeholder="First Name" required=""></div>
	 <div><input type="text" value="{{name}}" name="authors-name[]" placeholder="Family Name, Given names" required=""></div>
	 <div><input type="email" name="authors-email[]" value="{{mail}}" placeholder="Email" required></div>
</div>
  <input type="button" class="ui button active" id="addauthors" value="Add a new authors"></input>
  </div>
  <div class=" field">
    <label>Keywords</label>
<div class=" field" id="keywords">
	 <div><input type="text" name="keywords[]" placeholder="Keyword"></div>
</div>
  <input type="button" class="ui button active" id="addkeywords" value="Add a new keyword"></input>
  </div>
   <div class="required field">
    <label>Description</label>
    <textarea name="description" required="">{{description}}</textarea>
  </div>
   <div class="required field">
    <label>Scientific field</label>
    <input type="text" name="scientific_field" value="{{scientific_field}}" required=""></input>
  </div>
   <div class="required field">
      <label>License</label>
       <select class="ui dropdown" name="license">
	  <option value="0">Creative Commons Attribution-NonCommercial 4.0</option>
	  <option value="1">Creative Commons Attribution-NonCommercial 4.0</option>
</select>
  </div>
  <div class="ui form">
  <div class="inline fields">
  <div class="field">
  <div class="ui radio checkbox">
  	<input type="radio"  onclick="APP.modules.upload.checkformbutton()" name="access_right" id="open" value="Open"> 
  	<label>Open</label>
  	</div>
  	</div>
  	<div class="field">
  <div class="ui radio checkbox">
    <input type="radio"  onclick="APP.modules.upload.checkformbutton()" name="access_right" id="closed" value="Closed" checked> 
    <label>Closed</label>
    </div>
    </div>
    <div class="field">
 <div class="ui radio checkbox">
	<input type="radio" onclick="APP.modules.upload.checkformbutton()" name="access_right" id="embargoed" value="Embargoed">
	 <label>Embargoed</label>
  </div>
  </div>
  <input type="text" class="date" name="publication_date" id="date_end">
  </div>
  </div>
   


<button class="ui button" type="submit">Submit</button>
</form>
</form>
         

</div>

{% include 'footer.html.twig' %}
