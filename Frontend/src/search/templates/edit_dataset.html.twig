{% include 'head.html.twig' %}
<div class="ui grid container">
   <div class="row"></div>
   <div class="row">
      <h1> Edit document </h1>
   </div>
   <div class="ui ten wide column centered">
      {% if error %}
      <div class="ui warning message">
         <div class="header">
            Warning!  
         </div>
         {{error}}
      </div>
      {%endif%}
      <form class="ui form" action="editrecord?id={{doi}}" method="post" enctype="multipart/form-data" >
      {% if admin and accessright != "Unpublished" %}
      <div class="ui message">
         <div class="header">
            Instructions:
         </div>
         <p>Upload minimum one file and fill-in required fields (marked with a red star ).</p>
      </div>
         <h4 class="ui dividing header">Files <i class="file icon"></i> </h4>
         <div class="required field">
            <label for="file" class="custom-file-upload">
            File 
            </label>
         </div>
         <div class="ui grid">
            <div class="required field" id="files">
            {%if files%}
            {%for file in files%}
               <div class="ui input">
                     <input id="text" type="text" name="file_already_uploaded[]" value={{file.DATA_URL}} readonly><div class="ui icon delete"><i class="remove icon"></i></div>
               </div>
            {%endfor%}
            {%endif%}
            </div>
            <div class="row"></div>
         </div>
         <div class="ui primary  button" id="addfile">
            <i class="plus icon"></i> Add a file
         </div>
         {%endif%}
         {% include 'formdataset.html.twig' %}
         <div class="ui grid ">
            <div class="ui sixteen wide column ">
            <div class="ui error message"></div>
            <div class="row"></div>
            <a href="javascript:history.back();" class="ui red button" >Cancel</a>
            <button class="ui submit right floated  button" >Submit</button>
            </div>
            <div class="row"></div>
         </div>

      </form>
   </div>

<script type="text/javascript">
   APP.modules.upload.init();
   $('form').submit(function () {
    var file = $.trim($('#files input').val());
    if (file==="") {
      $('.ui .message').addClass('red');
      $('html,body').scrollTop(0);
    return false;
    }
   
});
   
</script>
